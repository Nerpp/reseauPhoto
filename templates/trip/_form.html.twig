{{ form_start(form) }}

<div class="col-6 pt-2">
	<label for="name">Nom du voyage</label>
	{{ form_widget(form.name, {'attr':{'class':'form-control form-control-lg ms-5'}}) }}
</div>

<div class="d-flex flex-column pt-2">
	<div class="col-2">
		<p>Photo de pr√©sentation</p>
	</div>
	<div class="d-flex flex-row">
		{% if trip.photo is empty %}
			<div class="col-6 ms-5">
				<p>Ajouter une ou plusieurs photo(s)</p>
			</div>
		{% else %}

			{% if trip.featuredImage is null %}
				<div class="col-4 ms-5">
					<img src="{{ asset("/img/"~trip.photo[0].source) }}" class="tripCard" alt="...">
				</div>
			{% else %}
				<div class="col-4 ms-5">
					<img src="{{ asset("/img/"~trip.featuredImage.source) }}" class="tripCard" alt="...">
				</div>

			{% endif %}
			{% if trip.featuredImage is null %}
				<div class="col-2 d-flex justify-content-center align-items-center">
					<p>
						<a href="{{ path('select_feature', {'id': trip.id }) }}">Select</a>
					</p>
				</div>
			{% endif %}
		{% endif %}
	</div>
</div>

<div class="col-6 p-2">
	<label for="image">Ajouter des photos</label>
</div>
<div class="col-6">
	{{ form_widget(form.image, {'attr':{'class':'form-control form-control-lg ms-5'}}) }}
</div>


<div class="col-6 p-2">
	<label for="description">Description du voyage</label>
</div>
<div class="col-6">
	{{ form_widget(form.description, {'attr':{'class':'form-control form-control-lg ms-5'}}) }}
</div>
<div class="col-6 p-2">
	<label for="createdAt">Date du voyage</label>
</div>
<div class="col-6">
	{{ form_widget(form.createdAt, {'attr':{'class':'ms-5'}}) }}
</div>

<div class="col-6 p-3 ms-5">
	<button class="btn">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
