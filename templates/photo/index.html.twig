{% extends 'base.html.twig' %}

{% block title %}
	Hello PhotoController!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="col-12 d-flex flex-row justify-content-center p-5">
			<h1>{{ photos.trip.name }}</h1>
		</div>
	</div>

    <div class="container">
		<div class="col-3">
			<a href="{{ path('app_trip', {'id': photos.trip.id }) }}" class="btn btn-primary">Back</a>
		</div>
	</div>

	<div class="container">
		<div class="d-flex flex-column align-items-center">
			<div class="col-8">
				<img src="{{ asset("/img/trip/"~photos.source) }}" class="particularPhoto" alt="...">
			</div>
            <div class="col-5 d-flex justify-content-center">
                <p>
                    {{ photos.description}}
                </p>
            </div>
		</div>
	</div>
{% endblock %}
